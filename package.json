{
  "name": "@kitstack/nest-req-ctx",
  "version": "1.0.0",
  "description": "Type-safe request context management for NestJS using AsyncLocalStorage with Express and Fastify support",
  "author": "KitStack",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:cov": "jest --coverage",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nestjs",
    "nest",
    "request-context",
    "async-local-storage",
    "continuation-local-storage",
    "cls",
    "typescript",
    "express",
    "fastify"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kitstack/nest-req-ctx"
  },
  "bugs": {
    "url": "https://github.com/kitstack/nest-req-ctx/issues"
  },
  "homepage": "https://github.com/kitstack/nest-req-ctx#readme",
  "peerDependencies": {
    "@nestjs/common": "^9.0.0 || ^10.0.0",
    "@nestjs/core": "^9.0.0 || ^10.0.0",
    "reflect-metadata": "^0.1.13 || ^0.2.0",
    "rxjs": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "@nestjs/platform-express": {
      "optional": true
    },
    "@nestjs/platform-fastify": {
      "optional": true
    }
  },
  "devDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-fastify": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "express": "^4.18.2",
    "fastify": "^4.26.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
